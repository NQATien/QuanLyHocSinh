@model List<Lop>

    <h1>Danh sách</h1>

@if (Model.Count==0)
{
    <p></p>
}
else{
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Lớp </th>
                        <th scope="col">Khối</th>
                        <th scope="col">Action </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.LopID</th>
                            <td>@item.LopName</td>
                            <td>@item.KhoiName</td>

                            <td>
                                <a class="btn btn-primary" asp-controller="Lop" asp-action="Detail" asp-route-ID="@item.LopID">
                                    <i class="far fa-eye"></i>
                                </a>

                                <a class="btn btn-success" asp-controller="Lop" asp-action="Edit" asp-route-ID="@item.LopID"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger" asp-controller="Lop" asp-action="Delete" asp-route-ID="@item.LopID"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}