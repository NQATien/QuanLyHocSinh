@model LopVM

<h1>Bạn có muốn xóa lớp này</h1>

<form method="post" asp-action="Delete" asp-controller="Lop">
    <div class="form-group">
        <label>Lớp ID: </label>
        <input asp-for="LopId" class="form-control" readonly />
    </div>
    <div class="form-group">
