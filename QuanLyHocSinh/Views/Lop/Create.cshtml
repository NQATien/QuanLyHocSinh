@model LopVM

<h1>Thêm lớp mới</h1>

<form method="post" asp-action="Create" asp-controller="Lop" enctype="multipart/form-data">

    <div class="form-group">
        <label>Lớp: </label>
        <input asp-for="LopName" class="form-control" />
        <label>Sỉ số: </label>
        <input asp-for="Siso" class="form-control" />
        <label>Khối ID: </label>
        <input asp-for="KhoiId" class="form-control" />
        <label>Khối: </label>
        <input asp-for="KhoiName" class="form-control" />
  
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
