@{
}
@model DiemDanhVM

<h1>Bạn có muốn xóa điểm danh</h1>

<form method="post" asp-action="Delete" asp-controller="DiemDanh">
    <div class="form-group">
        <label>ID: </label>
        <input asp-for="DiemDanhId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Môn Học </label>
        <input asp-for="MonName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Ngày: </label>
        <input asp-for="Ngay" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Tiết: </label>
        <input asp-for="Tiet" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Học Sinh: </label>
        <input asp-for="HocSinhName" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Xác nhận</button>
</form>
