@model DiemDanhVM

<h1>Thêm điểm danh mới</h1>

<form method="post" asp-action="Create" asp-controller="DiemDanh" enctype="multipart/form-data">

    <div class="form-group">
        <label>ID: </label>
        <input asp-for="DiemDanhId" class="form-control" />
        <label>Môn Học: </label>
        <input asp-for="MonName" class="form-control" />
        <label>Ngày: </label>
        <input asp-for="Ngay" class="form-control" />
        <label>Tiết: </label>
        <input asp-for="Tiet" class="form-control" />
        <label>Học Sinh: </label>
        <input asp-for="HocSinhName" class="form-control" />

    </div>

    <button type="submit" class="btn btn-primary">Xác nhận</button>
</form>
