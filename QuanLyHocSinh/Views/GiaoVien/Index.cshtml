@model IEnumerable<GiaoVien>

<!DOCTYPE html>
<html>
<head>
    <title>Danh sách Giáo viên</title>
    <!-- Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa; /* Màu nền xám nhạt */
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff; /* Màu nền trắng */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007BFF; /* Màu xanh dương */
            text-align: center;
            margin-bottom: 30px;
        }

        .btn-add {
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            overflow: hidden;
        }

            .table th, .table td {
                padding: 10px;
                text-align: center;
                vertical-align: middle;
                border: 1px solid #dee2e6;
            }

            .table th {
                background-color: #007BFF; /* Màu nền xanh dương */
                color: #fff;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f8f9fa; /* Màu nền xám nhạt */
            }

        .btn-action {
            margin-right: 5px;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-action:hover {
                text-decoration: none;
            }

        .btn-edit {
            background-color: #28a745; /* Màu nền xanh lá */
            border-color: #28a745; /* Màu viền xanh lá */
        }

        .btn-delete {
            background-color: #dc3545; /* Màu nền đỏ */
            border-color: #dc3545; /* Màu viền đỏ */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Danh sách Giáo viên</h1>

        <a class="btn btn-primary btn-add" asp-controller="GiaoVien" asp-action="Create"> Thêm giáo viên mới </a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Họ và tên</th>
                        <th scope="col">Lớp</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in lsGiaovien)
                    {
                        <tr>
                            <th scope="row">@item.GiaoVienID</th>
                            <td>@item.GiaoVienName</td>
                            <td>@item.LopName</td>
                            <td>
                                <a class="btn btn-success btn-action btn-edit" asp-controller="GiaoVien" asp-action="Edit" asp-route-ID="@item.GiaoVienID"><i class="fas fa-edit"></i> Edit</a>
                                <a class="btn btn-danger btn-action btn-delete" asp-controller="GiaoVien" asp-action="Delete" asp-route-ID="@item.GiaoVienID"><i class="far fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS script link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome script link -->
    <script src="https://kit.fontawesome.com/your_font_awesome_kit.js" crossorigin="anonymous"></script>
</body>
</html>
