        <label>Điểm HK2 : </label>
        <input asp-for="Diemhk2" class="form-control" />
        <span asp-validation-for="Diemhk2" class="text-danger small"></span>
        <label>Điểm HK3 : </label>
        <input asp-for="Diemhk3" class="form-control" />
        <span asp-validation-for="Diemhk3" class="text-danger small"></span>
