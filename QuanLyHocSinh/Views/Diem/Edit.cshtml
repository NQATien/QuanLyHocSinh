@model DiemVM

<h1>Chỉnh sửa điểm </h1>

<form method="post" asp-action="Edit" asp-controller="Diem" enctype="multipart/form-data">
    <input asp-for="DiemId" type="hidden" class="form-control" />
    <div class="form-group">
        <label>Điểm HK1 : </label>
        <input asp-for="Diemhk1" class="form-control" />
