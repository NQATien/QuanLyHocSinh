@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Đăng nhập:</h1>
    <form asp-action="Login" method="post" style="max-width: 300px; margin: 0 auto;">
        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" class="form-control" style="width: 100%;" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" class="form-control" style="width: 100%;" />
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%;">Đăng nhập</button>
    </form>
</div>
