@{
    var lsHocSinh = ViewData["listHocSinh"] as IEnumerable<HocSinh>;
    var lstLop = ViewData["ListLop"] as IEnumerable<Lop>;
}

<h1 style="margin-left: 20px;">Danh sách</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <a class="btn btn-success " asp-controller="HocSinh" asp-action="Create"
               style="margin-bottom: 10px; margin-left: 20px;"> Thêm học sinh mới </a>
        </div>
        
        @model List<HocSinh>
        @using (Html.BeginForm("Search","HocSinh", FormMethod.Get))
        {
        <div>
            <select name="idlop">
                <option value="">Chọn khối</option>
                <option value="2">Khối 12</option>
                <option value="3">Khối 11</option>
                <option value="4">Khối 10</option>
                <option value="5">Khối 9</option>
            </select>
            <button type="submit">Lọc</button>
        </div>
        }
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Họ và tên</th>
                        <th scope="col">Lớp </th>
                        <th scope="col">Ảnh</th>
                        <th scope="col">Action </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in lsHocSinh)
                    {
                        <tr>
                            <th scope="row">@item.HocSinhID</th>
                            <td>@item.HocSinhName</td>
                            <td>@item.LopName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="~/uploads/@item.ImagePath" alt="@item.HocSinhName" width="100" height="100" />
                                }
                                else
                                {
                                    <span>Không có hình ảnh</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-controller="HocSinh" asp-action="Detail" asp-route-ID="@item.HocSinhID">
                                    <i class="far fa-eye"></i>
                                </a>

                                <a class="btn btn-success" asp-controller="HocSinh" asp-action="Edit" asp-route-ID="@item.HocSinhID"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger" asp-controller="HocSinh" asp-action="Delete" asp-route-ID="@item.HocSinhID"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>