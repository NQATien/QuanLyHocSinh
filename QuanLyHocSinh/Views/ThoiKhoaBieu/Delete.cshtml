@model ThoiKhoaBieuVM

<h1>Bạn có muốn xóa thời khoá biểu</h1>

<form method="post" asp-action="Delete" asp-controller="ThoiKhoaBieu">
    <div class="form-group">
        <label>TKB ID: </label>
        <input asp-for="ThoiKhoaBieuId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>TKB Lớp: </label>
        <input asp-for="ThoiKhoaBieuName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Giáo viên: </label>
        <input asp-for="GiaoVienName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Môn Học: </label>
        <input asp-for="MonName" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Xác nhận</button>
</form>
