@{
    var lstkb = ViewData["listThoiKhoaBieu"] as IEnumerable<QuanLyHocSinh.Models.ThoiKhoaBieu>;
}

<h1 style="margin-left: 20px;">Thời Khoá Biểu</h1>
<a class="btn btn-success" asp-controller="ThoiKhoaBieu" asp-action="Create"
   style="margin-bottom: 10px; margin-left: 20px;"> Thêm TKB </a>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">TKB Lớp</th>
                        <th scope="col">Giáo viên</th>
                        <th scope="col">Môn</th>
                        <th scope="col">Ngày</th>
                        <th scope="col">Tiết</th>
                        <th scope="col">Action </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in lstkb)
                    {
                        <tr>
                            <th scope="row">@item.ThoiKhoaBieuID</th>
                            <td>@item.ThoiKhoaBieuName</td>
                            <td>@item.GiaoVienName</td>
                            <td>@item.MonName</td>
                            <td>@item.Ngay</td>
                            <td>@item.Tiet</td>
                            <td>
                                <a class="btn btn-success" asp-controller="ThoiKhoaBieu" asp-action="Edit" asp-route-ID="@item.ThoiKhoaBieuID"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger" asp-controller="ThoiKhoaBieu" asp-action="Delete" asp-route-ID="@item.ThoiKhoaBieuID"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>